{
  "name": "ayenda-test",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "gh-pages": "^2.1.1",
    "keymirror-nested": "^1.0.3",
    "lodash": "^4.17.21",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "reactstrap": "^8.1.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": " react-scripts test",
    "test:coverage": "yarn lint && yarn test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "standard --verbose | snazzy",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "standard"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "fetch-mock": "^7.5.1",
    "husky": "^3.0.9",
    "jest-enzyme": "^7.1.1",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.12.0",
    "react-test-renderer": "^16.11.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "standard": {
    "globals": [
      "it",
      "xit",
      "describe",
      "fetch",
      "expect",
      "beforeEach",
      "afterEach",
      "jest"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": -10
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/public/**",
      "!src/node_modules/**",
      "!src/coverage/**",
      "!src/serviceWorker.js",
      "!src/index.js",
      "!src/types.js",
      "!src/config/api.js",
      "!src/config/store.js",
      "!src/actionCreators.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test:coverage"
    }
  },
  "babel": {
    "plugins": [
      "dynamic-import-node"
    ]
  }
}
